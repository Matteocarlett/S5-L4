<h2>Risorse eliminate</h2>

<h2>Scarpe</h2>

@if (Model.Count == 0)
{
    <h3>Non ci sono scarpe nel cestino</h3>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Prezzo</th>
                <th scope="col">Descrizione</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var scarpe in Model)
            {
                <tr>
                    <td>@scarpe.ScarpeId</td>
                    <td>@scarpe.Nome</td>
                    <td>@scarpe.Prezzo</td>
                    <td>@scarpe.Descrizione</td>
                    <td>
                        <form style="display: inline" asp-controller="Scarpe" asp-action="Recover" method="post">
                            <input type="hidden" name="ScarpeId" value="@scarpe.ScarpeId" />
                            <button type="submit" class="btn btn-primary">Ripristina</button>
                        </form>
                        <form style="display: inline" asp-controller="Scarpe" asp-action="Delete" method="post">
                            <input type="hidden" name="ScarpeId" value="@scarpe.ScarpeId" />
                            <button type="submit" class="btn btn-danger">Elimina per sempre</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
