@model Shoe

<form asp-controller="Shoe" asp-action="Add" method="post" enctype="multipart/form-data">
    <label asp-for="@Model.Nome"></label>
    <input type="text" asp-for="@Model.Nome" /><br />

    <label asp-for="@Model.Prezzo"></label>
    <input type="number" asp-for="@Model.Prezzo" /><br />

    <div class="mb-3">
        <label for="formFile" class="form-label">Choose an image</label>
        <input class="form-control" type="file" id="formFile" name="image">
    </div>

    <button class="btn btn-primary">Submit</button>
</form>